<div class="w-full max-w-3xl mx-auto py-8">
  <div class="flex items-center gap-2 mb-8">
    <%= link_to team_path(@team), class: "text-gray-500 hover:text-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold">Edit Team</h1>
  </div>

  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <h2 class="card-title text-xl mb-4">Team Details</h2>
      <%= render 'form', team: @team %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-xl text-error mb-4">Danger Zone</h2>
      <p class="mb-4">Deleting a team will remove all team memberships and cannot be undone.</p>
      <%= button_to "Delete Team", team_path(@team), method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure you want to delete this team? This action cannot be undone." } %>
    </div>
  </div>
</div>
