<div class="min-h-screen flex flex-col items-center justify-center p-4 bg-base-200">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-primary">Envision</h1>
    <p class="text-lg mt-2">Modern Code Review</p>
  </div>

  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body p-8">
      <h2 class="text-2xl font-bold text-center mb-6">Change Your Password</h2>
      
      <p class="text-center mb-6 text-base-content/80">Please enter your new password below.</p>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control w-full mb-6">
          <%= f.label :password, "New password", class: "label font-medium text-base" %>
          <% if @minimum_password_length %>
            <div class="label-text-alt text-base-content/70 mb-2"><%= @minimum_password_length %> characters minimum</div>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full bg-base-100" %>
        </div>

        <div class="form-control w-full mb-6">
          <%= f.label :password_confirmation, "Confirm new password", class: "label font-medium text-base" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full bg-base-100" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Change My Password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      
      <div class="divider my-6">OR</div>
      
      <div class="flex flex-col space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  
  <div class="mt-8 text-center">
    <%= link_to "← Back to Home", root_path, class: "link link-hover text-primary font-medium" %>
  </div>
</div>
